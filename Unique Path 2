'''
len(grid)=no. of rows
len(grid[0])=no. of columns in first row
grid[i][j] check krta h row or column
when grid[0][0]= path is empty
when grid[1][1]= path is occupied
'''
class Solution:
    def uniquePathsWithObstacles(self, obstacleGrid: List[List[int]]) -> int:
        m, n = len(obstacleGrid), len(obstacleGrid[0])
        
        @lru_cache(maxsize=None)
        def helper(i, j):
            if i < 0 or j < 0:
                return 0
            if obstacleGrid[i][j] == 1:
                return 0
            if i == 0 and j == 0:
                return 1
            return helper(i-1, j) + helper(i, j-1)
        
        return helper(m-1, n-1)
